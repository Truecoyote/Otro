var React = require('react');
var ReactDOM = require('react-dom');
var Levels = require('./Levels');
var Abilities = require('./Abilities');

var Main = React.createClass({
  getInitialState: function(){
    return {
      name: 'Eloy Espinaca',
      levels: [1,2,3,4,5,6],
      text: 'Cdo te comés a E. Espinaca: NO aumentás tu fuerza, y probablemente seas un zombie o uno de esos degenerado que le prometieron comer su cadáver',
      abilities: [2,1,0,1]
    }
  },
  render: function(){
    return (
        <div className = 'card'>
          <Levels levels={this.state.levels}/>
          <ul className='habilities'>
            <h2>
              {this.state.name}
            </h2>
            <Abilities abilities = {this.state.abilities} />

            <div className='card-text'>
              {this.state.text}
            </div>
          </ul>
        </div>
        )
  }
});

ReactDOM.render(<Main />, document.getElementById('app'))
